generator client {
  provider = "prisma-client-js"
}

datasource bd {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id Int @id @default(autoincrement())

  fulName  String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime
}

model Category {
  id Int @id @default(autoincrement())

  name     String    @unique
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime
}

model Product {
  id Int @id @default(autoincrement())

  name     String
  imageUrl String

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  items ProductItem[]

  ingredients Ingredient[]

  createdAt DateTime @default(now())
  updatedAt DateTime
}

model ProductItem {
  id Int @id @default(autoincrement())

  price      Int
  size       Int?
  pizzaSType Int?

  product Product @relation(fields: [productId], references: [id])
}

model Ingredient {
  id Int @id @default(autoincrement())

  name     String
  price    Int
  imageUrl String

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime
}
